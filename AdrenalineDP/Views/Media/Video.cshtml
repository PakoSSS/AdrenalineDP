@model IEnumerable<AdrenalineDP.Entities.Media>
@using AdrenalineDP.Data
@using AdrenalineDP.Entities


<style>
    .card {
        width: 30rem;
        margin: 1rem;
        height: 30rem;
        object-fit: cover;
    }
</style>

<div class="text-center">
    <h1>Видео</h1>
</div>
<br />

<div class="row">
    @foreach (var item in Model)
    {
        @if (item.Category == AdrenalineDP.Data.Enums.Category.Видео)
        {
            
            if (item.Service.Name == "Мотокрос")
            {

           <iframe width="300" height="200"
            src="@item.FilePath" title="YouTube video player" style="margin:6px;" frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen></iframe>
            }
        }
    }
</div>

