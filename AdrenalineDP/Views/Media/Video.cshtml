@model IEnumerable<AdrenalineDP.Entities.Media>
@using AdrenalineDP.Data
@using AdrenalineDP.Entities


<style>
    .card {
        width: 30rem;
        margin: 1rem;
        height: 30rem;
        object-fit: cover;
    }
    .border_f {        
        background-color: #a40606;
        background-image: linear-gradient(315deg, #a40606 0%, #d98324 74%);
        text-align:center;
        align-items:center;
        justify-content:center;
        width:fit-content;
        height:fit-content;
    }
</style>

<div class="text-center">
    <h1>Видео</h1>
</div>
<br />
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {

            @if (item.Category == AdrenalineDP.Data.Enums.Category.Видео)
            {

                <div class="col-4">
                    <div class="border_f">
                        <iframe width="300" height="200"
                                src="@item.FilePath" title="YouTube video player" style="margin:6px;" frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                    </div>
                </div>

            }
        }
    </div>
</div>
