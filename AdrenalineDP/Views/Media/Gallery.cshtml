@model IEnumerable<AdrenalineDP.Entities.Media>
    <style>
        img {
            -moz-transition: all 0.3s;
            -webkit-transition: all 0.3s;
            transition: all 0.3s;
        }

            img:hover {
                -webkit-transform: scale(1.04);
                -moz-transform: scale(1.04);
                -o-transform: scale(1.04);
                -ms-transform: scale(1.04);
                transform: scale(1.04);
            }

        .card {
            width: 30rem;
            margin: 1rem;
            height: 30rem;
            object-fit: cover;
        }
        html::-webkit-scrollbar {
            width: 20px;
        }


        html::-webkit-scrollbar-thumb {
            width: 20px;
            border-radius: 20px;
            background: linear-gradient(315deg, #a40606 0%, #d98324 74%);
        }

        html::-webkit-scrollbar-track {
            background-color: #333;
        }

        html::-webkit-scrollbar-thumb:hover {
            background-image: linear-gradient(315deg, #a40606 0%, #d98324 74%);
        }
    </style>

<div class="text-center">
    <h1>Галерия</h1>
</div>
<br />
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            if (item.Category == AdrenalineDP.Data.Enums.Category.Снимка)
            {
                <div class="col-6">
                    <img src="@item.FilePath" class="card" alt="Invalid Image URL" onclick="" />
                </div>
            }

        }
    </div>
</div>
