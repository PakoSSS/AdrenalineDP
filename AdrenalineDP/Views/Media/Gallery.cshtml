@model IEnumerable<AdrenalineDP.Entities.Media>
    <style>
        img {
            -moz-transition: all 0.3s;
            -webkit-transition: all 0.3s;
            transition: all 0.3s;
        }

            img:hover {
                -webkit-transform: scale(1.04);
                -moz-transform: scale(1.04);
                -o-transform: scale(1.04);
                -ms-transform: scale(1.04);
                transform: scale(1.04);
            }

        .card {
            width: 30rem;
            margin: 1rem;
            height: 30rem;
            object-fit: cover;
        }
    </style>

<div class="text-center">
    <h1>Галерия</h1>
</div>
<br />
<div class="row">
    @foreach (var item in Model)
    {
        if (item.Category == AdrenalineDP.Data.Enums.Category.Снимка)
        {
            <div class="col-6">
                <img src="@item.FilePath" class="card" alt="Invalid Image URL" onclick="" />
            </div>
        }

    }
</div>
