@model AdrenalineDP.Entities.ServiceRequest

@{
    ViewData["Title"] = "Details";
}
@if (User.IsInRole("Admin") == false)
{
    throw new InvalidOperationException("Нямате нужния достъп, за да редактирате тук!");
}
<div class="text-center">
    <h1>Детайли</h1>
    <h4>Резервация</h4>
    <hr />
</div>

<div>

    <div class="col-md-7 offset-md-5">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Full_Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Service)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Service.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReserveDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReserveDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Message)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Message)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RegisterDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RegisterDate)
            </dd>
        </dl>
    </div>
</div>
<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary"><i class="fa fa-marker fa-lg"></i> Редактиране</a> |
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-hand-point-left fa-lg"></i> Обратно към листа</a>
</div>
