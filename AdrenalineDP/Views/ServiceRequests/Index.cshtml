@model IEnumerable<AdrenalineDP.Entities.ServiceRequest>

@{
    ViewData["Title"] = "Index";
}

<style>
    th{
        padding:5px;
    }
</style>
<h1>Резервации</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Добавяне на резервация</a>
</p>
<div class="text-center">
    <table class="table" style="background:white;border-radius:15px;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReserveDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Message)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegisterDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Full_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReserveDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegisterDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-dark"><i class="fa-solid fa-book"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger"><i class="fa fa-trash-alt fa-lg"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>