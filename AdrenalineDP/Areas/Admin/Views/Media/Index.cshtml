@model IEnumerable<AdrenalineDP.Entities.Media>
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore
@using AdrenalineDP.Data
@using AdrenalineDP.Entities


@inject SignInManager<Users> SignInManager
@inject UserManager<Users> UserManager

@{
    ViewData["Title"] = "Index";
}
@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin"))
{
    <h1>Медия</h1>

    <p>
        <a asp-action="Create" class="btn btn-outline-info">Добавяне на медия</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FilePath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FilePath)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Редактиране</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark">Детайли</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-outline-danger">Изтриване</a>
                    </td>
                </tr>
            }



        </tbody>
    </table>
}
else
{
    <div class="text-center">
        <h1>Галерия</h1>
    </div>
    <br />
    <div class="row">
        @foreach (var item in Model)
        {
            <img src="@item.FilePath" class="img-fluid" alt="Invalid Image URL" />
        }
    </div>
}
